<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".VisualizarPrestamoLibrosActivity">

    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:ems="10"
        android:hint="Ingresar Numero de Libro"
        android:inputType="textPersonName"
        android:maxLength="5"
        app:layout_constraintBottom_toTopOf="@+id/btnBuscarLibro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints=""/>

    <EditText
        android:id="@+id/txtMostrarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="60dp"
        android:clickable="false"
        android:focusable="false"
        android:ems="10"
        android:enabled="true"
        android:hint="Nombre del Libro"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvIconoNumeroPrestamo"
        app:layout_constraintTop_toBottomOf="@+id/txtMostrarNumero"
        android:autofillHints="" />

    <EditText
        android:id="@+id/txtMostrarAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:focusable="false"
        android:ems="10"
        android:enabled="true"
        android:hint="Autor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtMostrarFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvIconoNumeroLibro"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/txvIconoNumeroCuenta"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/editorial"
        app:layout_constraintBottom_toTopOf="@+id/txtMostrarAutor"
        app:layout_constraintEnd_toStartOf="@+id/txtMostrarNumero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBuscarLibro" />

    <TextView
        android:id="@+id/txvIconoNumeroPrestamo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/numerolibro"
        app:layout_constraintBottom_toBottomOf="@+id/txtMostrarNombre"
        app:layout_constraintEnd_toStartOf="@+id/txtMostrarNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtMostrarNombre" />

    <TextView
        android:id="@+id/txvIconoFechaDevolucion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/returnbook"
        app:layout_constraintBottom_toBottomOf="@+id/txtMostrarEditorial"
        app:layout_constraintEnd_toStartOf="@+id/txtMostrarEditorial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtMostrarEditorial" />

    <TextView
        android:id="@+id/txvIconoNumeroLibro"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/libro1"
        app:layout_constraintBottom_toTopOf="@+id/txvIconoFechaDevolucion"
        app:layout_constraintEnd_toStartOf="@+id/txtMostrarAutor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMostrarNumero" />

    <EditText
        android:id="@+id/txtMostrarFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="11dp"
        android:clickable="false"
        android:focusable="false"
        android:ems="10"
        android:enabled="true"
        android:hint="Fecha de Publicación"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtMostrarEditorial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvIconoFechaPrestamo"
        android:autofillHints="" />

    <EditText
        android:id="@+id/txtMostrarEditorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="175dp"
        android:clickable="false"
        android:focusable="false"
        android:ems="10"
        android:enabled="true"
        android:hint="Editorial"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvIconoFechaDevolucion"
        android:autofillHints="" />

    <EditText
        android:id="@+id/txtMostrarNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="72dp"
        android:clickable="false"
        android:focusable="false"
        android:ems="10"
        android:enabled="true"
        android:hint="Número de Libro"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/txtMostrarAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvIconoNumeroCuenta"
        android:autofillHints="" />

    <TextView
        android:id="@+id/txvIconoFechaPrestamo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/fecha"
        app:layout_constraintBottom_toTopOf="@+id/txtMostrarEditorial"
        app:layout_constraintEnd_toStartOf="@+id/txtMostrarFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvIconoNumeroLibro" />

    <Button
        android:id="@+id/btnBuscarLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="27dp"
        android:text="@string/btnbuscar"
        app:layout_constraintBottom_toTopOf="@+id/txtMostrarNumero"
        app:layout_constraintStart_toStartOf="@+id/txtMostrarNumero" />

    <TextView
        android:id="@+id/txvTituloDeLibro"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="24dp"
        android:text="Visualizar Libro"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtBuscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>